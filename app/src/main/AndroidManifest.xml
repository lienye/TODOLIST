<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.todolist">

    <!--申请权限-->
    <!--自启动权限-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--允许程序访问账户Gmail列表-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <!--访问用户个人资料-->
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <!--允许程序访问联系人通讯录信息-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--允许程序访问网络连接，可能产生GPRS流量-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--允许程序访问摄像头进行拍照-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!--允许程序写入外部存储,如SD卡上写文件-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--程序可以读取设备外部存储空间（内置SDcard和外置SDCard）的文件-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--允许程序获取网络信息状态，如当前的网络连接是否有效-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许使用前台-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!--允许程序获取当前WiFi接入的状态以及WLAN热点的信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序在手机屏幕关闭后后台进程仍然运行-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 允许读取手机状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--录音权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--APP通知显示在状态栏-->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <!--控制WiFi开关，改变WiFi状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!--改变音频输出设置-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <!--修改系统设置-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <!--任务栈权限-->
    <!--用来提供给应用手机相关组件的使用统计-->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!--uses-feature配置用来声明一个app在运行时所依赖的外部的硬件或软件特征-->
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!--        yhy add-->
        <!-- 注册添加新todo的页面-->x
        <activity android:name=".Activity.NewTodoActivity">
            <intent-filter>
                <action android:name="android.intent.action.NEWTODO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 注册添加新clock的页面-->
        <activity android:name=".Activity.NewClockActivity">
            <intent-filter>
                <action android:name="android.intent.action.NEWCLOCK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 注册锤子时钟的页面-->
        <activity
            android:name=".Activity.ClockActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"/>

    </application>

</manifest>